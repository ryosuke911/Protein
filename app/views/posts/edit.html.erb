<h1 class="ml-4"><%= @post.name %>の内容を編集</h1>

<div class="error">
  <% if @post.errors.any? %>
    <%= @msg %><br>
    <%=link_to "カテゴリを追加したい方はこちら","/categories/new" %>
  <% end %>
</div>

<%= form_for(@post, url:{controller:'posts',action:'update', id:@post.id}) do |form| %>
    <div class="form-group">
      <div class="col-sm">
          <div class="row ml-1">
            <div class="form-group col-sm-6">
              <label for="name">商品名</label>
              <%= form.text_field :name,{class:"form-control"} %>
            </div>
          </div> 
          <div class="row ml-1">
            <div class="form-group col-sm-6">
              <label for="protein">タンパク質(g)　※半角数字で入力してください。</label>
              <%= form.text_field :protein,{class:"form-control"} %>
            </div>
          </div>
          <div class="row ml-1">
            <div class="form-group col-sm-6">
              <label for="price">価格(円)　※半角数字で入力してください。</label>
              <%= form.text_field :price,{class:"form-control"} %>
            </div>
          </div>
          <div class="row ml-1">
            <div class="form-group col-sm-6">
              <label for="category_id">カテゴリ</label><br>
              <%= form.collection_select :category_id, Category.all, :id, :name, :include_blank => "カテゴリを選択してください" %>
            </div>
          </div>
          <div class="row ml-1">
            <div class="form-group col-sm-6">
              <label for="memo">メモ</label>
              <%= form.text_area :memo,{class:"form-control"} %>
            </div>
          </div>
          <div class="row ml-3">
            <%= form.submit "更新" %>
          </div>
    </div>      
<% end %>